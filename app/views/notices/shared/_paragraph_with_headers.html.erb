<% if individual_market_is_enabled? %>
  <div style="display:block; page-break-inside: avoid;">
    <table class="total_table" border="0" style="margin-top: <%= top_margin if defined? top_margin %>;">
      <tbody>
      <% if heading.present? %>
        <tr>
          <td style="font-size: 14px; padding-bottom: 8px;"><%= heading.html_safe %></td>
        </tr>
      <% end %>
      <% if sub_heading.present? %>
        <tr>
          <td style="padding-bottom: 5px;"><%= sub_heading.html_safe %></td>
        </tr>
      <% end %>
      <% contents.each do |para| %>
        <tr>
          <td style="padding-bottom: <%= bottom_margin if defined? bottom_margin %>;"><%= para.html_safe %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

<% else %>
  <div style="display:block; page-break-inside: avoid;">
    <table class="total_table" border="0">
      <tbody>
      <% if defined? heading %>
          <tr>
            <td>
              <h2 style="color:rgb(54,95,145); font-size: 14px; font-weight: bold; <%= col_styles[0] if defined? col_styles %>"><%= heading.html_safe %></h2>
            </td>
          </tr>
      <% end %>
      <% if defined? sub_heading %>
          <tr>
            <td><h3 style="color:black;"><%= sub_heading.html_safe %></h3></td>
          </tr>
      <% end %>
      <% if defined? contents %>
          <% contents.each do |para| %>
              <tr>
                <td class="notice-font"><%= para.html_safe %></td>
              </tr>
          <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>