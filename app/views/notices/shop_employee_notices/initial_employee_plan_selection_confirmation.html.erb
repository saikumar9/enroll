<%= render partial: 'notices/shared/cover', :locals => {notice: notice}%>
<%= render partial: 'notices/shared/logo' %>
<%= render partial: 'notices/shared/address', :locals => {notice: notice} %>
<br><br><br><br><br>
<%= render partial: 'notices/shared/date', :locals => {notice: notice} %>

<table class="total_table" border="0">
  <tbody>
  <tr>
    <td> Dear <%= notice.primary_fullname %>,  </td>
  </tr>
  </tbody>
</table>

<%= render partial: 'notices/shared/paragraph', :locals =>
                                                  { content: "Congratulations!  Your employer, #{notice.employer_name}, has completed its open enrollment period and has successfully met all eligibility requirements." }%>

<%= render partial: 'notices/shared/paragraph', :locals =>
                                                  { content: "Your plan selection #{notice.plan.plan_name} will go into effect on #{notice.plan_year.start_on}."} %>

<%= render partial: 'notices/shared/paragraph', :locals =>
                                                  { content: "Please note that your monthly premium contribution will be #{notice.enrollment.employee_cost}.  Your employer, #{notice.employer_name}, will contribute #{notice.enrollment.responsible_amount} towards your monthly premium."} %>

<%= render partial: 'notices/shared/paragraph', :locals =>
                                                  { content: "Thank you for enrolling into employer-sponsored coverage through the Health Connector."} %>

<%= render partial: 'notices/shared/paragraph_with_headers', :locals =>
                                                               { heading: 'For Questions or Assistance:',
                                                                 col_styles: ['margin-bottom: 0px']} %>
<%= render partial: 'notices/shared/paragraph', :locals =>
                                                  { content: "Please contact the Health Connector with any questions:"} %>
<table class="total_table" border="0">
  <tbody>
  <tr>
    <td>
      <ul style="list-style: circle solid;">
        <li class="notice-font">
          By calling <%=contact_center_phone_number%>. TTY: <%=contact_center_tty_number%> <br>
        </li>
        <li class="notice-font">
          Online at <a href= "#{site_main_web_address}"> <%= site_main_web_address %></a>
        </li>
      </ul>
    </td>
  </tr>
  </tbody>
</table>